#!/usr/bin/env bash

set -e

# Clean up.
cabal clean
rm -rf "$XDG_CACHE_HOME/magix/*"

# Build and run.
cabal build all
cabal test
cabal run magix -- -v test-scripts/minimal-bash
cabal run magix -- -v test-scripts/minimal-haskell
cabal run magix -- -v -f test-scripts/args-bash -h and other args
cabal run magix -- -v -f test-scripts/args-haskell -h and other args
